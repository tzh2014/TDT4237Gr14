{% extends 'base.twig' %}

{% block content %}

<h2>User</h2>

{{ flash.info }} <br />
{{ flash.error }} <br />

<img height="100" width="100" src="{{ user.ProfilePicPath }}" /> <br />

{% if user %}
    <table>
        <tr>
            <th>Id</th>
            <th>Username</th>
            <th>Hash</th>
            <th>Email</th>
            <th>Bio</th>
            <th>Age</th>
        </tr>
            <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.username }}</td>
            <td>********************************(not shown)</td>
            <td>{{ user.email }}</td>
            <td>{{ user.bio }}</td>
            <td>{{ user.age }}</td>
        </tr>
    </table>
{% else %}
    Could not find a user with username "{{ username }}".
{% endif %}

{% endblock %}
