{% extends 'base.twig' %}

{% block content %}

<h2>Forgotten password?</h2>

Hello {{ username }}. Thank you for answering your question. Now you can choose a new password.

<br />
<div>{{ flash.error }}</div><br />

<form action="/forgot/change" method="POST">

<label>New password: </label>
<input type="password" name="pass"> <br />
		
<input type="hidden" name="nonce" value="{{ nonce }}">
<input type="submit" name="submit" value="Set new password">
</form>
{% endblock %}

